@page "/toggler"
@rendermode InteractiveServer

<header>    

</header>
<body>
    <div class="container align-content-start">
        <div class="container col-md-10 col-sm-12 float-end col-lg-4">
            <div class="container d-flex flex-column px-2 bg-dark">
                <h3 class="p-2 text-white">Filters</h3>
                <div class="container d-flex">
                    <div class="col-9 pe-1">
                        <input class="form-control" type="text" placeholder="Поиск по ключевому слову" aria-label="default input example">
                    </div>
                    <button class="btn btn-secondary col-3 border-2 border-white">S</button>
                </div>
                <div class="container d-flex my-2">
                    <select class="form-select" aria-label="Категории">
                        <option selected>Все категории</option>
                        <option value="1">Программирование</option>
                        <option value="2">Веб-дизайн</option>
                        <option value="3">Копирайтинг</option>
                    </select>
                </div>
                <div class="container mx-2 my-2">
                    <div class="d-lg-flex">
                        <div class="form-check col-6">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label text-white" for="flexRadioDefault1">
                                Полный день
                            </label>
                        </div>
                        <div class="form-check col-6">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label text-white" for="flexRadioDefault2">
                                Неполный день
                            </label>
                        </div>
                    </div>
                    <div class="form-check col-6">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                        <label class="form-check-label text-white" for="flexRadioDefault2">
                            Подработка
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="container d-flex flex-column align-content-start col-lg-8 col-md-10 col-sm-12">
            @for (int i = 0; i < 7; i++)
            {
                <div class="orderBlock container px-2 py-1 mx-md-4 m-sm-2 border border-2">
                    <div class="d-flex justify-content-between w-100 p-3">
                        <a class="p-1 h3 col-auto" href="#">Zakaz name</a>
                        <h4 class="p-1 col-auto">Price</h4>
                    </div>
                    <div class="container">
                        <h6 class="col-12 align-left">Подробное поисание заказа</h6>
                    </div>
                    <div class="d-flex justify-content-between w-100 p-3">
                        <h6 class="p-1">3004 Prosmotrov</h6>
                        <h6 class="p-1">10 otklikov</h6>
                        <h6 class="p-1">10min nazad</h6>
                    </div>
                </div>
            }
        </div>

    </div>
</body>




